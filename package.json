{
  "name": "validation-server",
  "version": "0.4.1",
  "description": "Web service to validate data with support of multiple schema languages",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbv/validation-server.git"
  },
  "main": "index.js",
  "type": "module",
  "bin": {
    "validate": "./bin/validate.js"
  },
  "scripts": {
    "start": "nodemon --ignore formats -e js,ejs server.js",
    "update": "node bin/update.js",
    "test": "NODE_ENV=test mocha --exit --timeout 4000",
    "debug": "NODE_ENV=debug mocha --exit",
    "coverage": "NODE_ENV=debug c8 --skip-full mocha --exit",
    "validate": "node bin/validate.js",
    "lint": "eslint './**/*.js';",
    "fix": "eslint --fix './**/*.js'",
    "lint-staged": "standard-readme && lint-staged",
    "release": "git checkout dev && git pull && npm test && npm version $SEMVER && git push && git checkout main && git merge dev && git push --follow-tags && git checkout dev",
    "release:patch": "SEMVER=patch npm run release",
    "release:minor": "SEMVER=minor npm run release",
    "release:major": "SEMVER=major npm run release"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "author": "Jakob VoÃŸ",
  "license": "MIT",
  "devDependencies": {
    "ajv": "^8.9.0",
    "c8": "^7.11.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^8.8.0",
    "eslint-config-gbv": "^1.0.3",
    "lint-staged": "^12.3.3",
    "mocha": "^9.2.1",
    "mocha-eslint": "^7.0.0",
    "portfinder": "^1.0.28",
    "pre-commit": "^1.2.2",
    "standard-readme": "^2.0.4"
  },
  "dependencies": {
    "ajv-formats": "^2.1.1",
    "ajv-formats-draft2019": "^1.6.1",
    "cacache": "^15.3.0",
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "fast-xml-parser": "^4.0.3",
    "get-stdin": "^9.0.0",
    "isbn3": "^1.1.19",
    "json-schema-migrate": "^2.0.0",
    "meow": "^10.1.2",
    "node-fetch": "^3.2.0",
    "nodemon": "^2.0.15",
    "tmp": "^0.2.1"
  },
  "engines": {
    "node": ">=14.8.0"
  }
}
