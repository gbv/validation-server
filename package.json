{
  "name": "validation-service",
  "version": "0.1.1",
  "description": "Web service to validate data against schemas",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbv/validation-service.git"
  },
  "main": "index.js",
  "scripts": {
    "start": "nodemon --ignore formats server.js",
    "update": "node bin/update.js",
    "test": "NODE_ENV=test mocha --exit",
    "debug": "NODE_ENV=debug mocha --exit",
    "coverage": "NODE_ENV=test nyc mocha --exit",
    "lint": "eslint './**/*.js';",
    "fix": "eslint --fix './**/*.js'",
    "lint-staged": "standard-readme && lint-staged",
    "release": "git checkout dev && git pull && npm test && npm version $SEMVER && git push && git checkout master && git merge dev && git push --follow-tags && git checkout dev",
    "release:patch": "SEMVER=patch npm run release",
    "release:minor": "SEMVER=minor npm run release",
    "release:major": "SEMVER=major npm run release"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "author": "Jakob VoÃŸ",
  "license": "MIT",
  "devDependencies": {
    "ajv": "^8.9.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^8.8.0",
    "eslint-config-gbv": "^1.0.3",
    "lint-staged": "^12.3.3",
    "mocha": "^9.2.0",
    "mocha-eslint": "^7.0.0",
    "nyc": "^15.1.0",
    "portfinder": "^1.0.28",
    "pre-commit": "^1.2.2",
    "standard-readme": "^2.0.4"
  },
  "dependencies": {
    "ajv-formats": "^2.1.1",
    "ajv-formats-draft2019": "^1.6.1",
    "axios": "^0.25.0",
    "ejs": "^3.1.6",
    "express": "^4.17.2",
    "json-schema-migrate": "^2.0.0",
    "meow": "^9.0.0",
    "nodemon": "^2.0.15"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
