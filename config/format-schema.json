{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://format.gbv.de/validate/format-schema.json",
  "type": "object",
  "required": [
    "id"
  ],
  "properties": {
    "title": {
      "type": "string"
    },
    "short": {
      "type": "string"
    },
    "id": {
      "$ref": "#/definitions/id"
    },
    "homepage": {
      "$ref": "#/definitions/url"
    },
    "base": {
      "$ref": "#/definitions/id"
    },
    "for": {
      "anyOf": [
        {
          "$ref": "#/definitions/id"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/id"
          }
        }
      ]
    },
    "mimetype": {
      "type": "string"
    },
    "schemas": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/schema"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "id": {
      "type": "string",
      "pattern": "^[0-9a-z_/-]+$"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://"
    },
    "value": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object"
        }
      ]
    },
    "schema": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/id"
        },
        "url": {
          "$ref": "#/definitions/url"
        },
        "value": {
          "$ref": "#/definitions/value"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  }
}
